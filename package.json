{
  "name": "@sd21st/http-js",
  "version": "0.1.0",
  "description": "Web HTTP utils.",
  "author": "StevenDean21st",
  "license": "MIT",
  "main": "index.js",
  "type": "module",
  "types": "index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/StevenDean21st/http-js.git"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "init": "pnpm install -D nodemon ts-node typescript @types/node",
    "dev": "nodemon lib/index.ts",
    "build": "tsc --build --verbose",
    "build:declarations": "tsc --declaration --emitDeclarationOnly --declarationDir ./types",
    "preview": "nodemon bin/index.js",
    "publish": "pnpm publish"
  },
  "dependencies": {
    "axios": "^0.27.2"
  },
  "devDependencies": {
    "@types/node": "^17.0.32",
    "nodemon": "^2.0.16",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  },
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      ".git",
      "node_modules/",
      "bin/",
      "types/",
      "coverage/"
    ],
    "watch": [
      "lib/"
    ],
    "execMap": {
      "ts": "node --loader ts-node/esm"
    },
    "env": {
      "NODE_ENV": "development"
    },
    "ext": "js,json,ts"
  },
  "files": [
    "lib",
    "bin",
    "package.json",
    "LICENSE",
    "README.md",
    "CHANGELOG.md",
    "tsconfig.json",
    "index.d.ts",
    "index.js"
  ]
}
